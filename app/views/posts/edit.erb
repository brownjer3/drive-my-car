<h1>POSTS EDIT FORM</h1>

<form action="/posts/<%=@post.id%>" method="POST" >
    <input type="hidden" name="_method" value="PATCH" />

    <h2>Title: </h2><input type="text" name="post[title]" value="<%= @post.title%>"/>
    <h2>Description: </h2><input type="text" name="post[desc]" value="<%= @post.desc%>"/>
    <h2>Where is your car? </h2><input type="text" name="post[s_location]" value="<%= @post.s_location%>"/>
    <h2>Where does it need to be? </h2><input type="text" name="post[e_location]" value="<%= @post.e_location%>"/>
    <h2>By when? </h2><input type="date" name="post[end_date]" value="<%= @post.end_date%>"/>

    <input type="submit" value="Edit" />
</form>
