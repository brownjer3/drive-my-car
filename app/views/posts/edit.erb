<h1>POSTS EDIT FORM</h1>

<form action="/posts/<%=@post.id%>" method="POST" >
    <input type="hidden" name="_method" value="PATCH" />

    <h2>Title: </h2><input type="text" name="post[title]" value="<%= @post.title%>"/>
    <h2>Description: </h2><input type="text" name="post[desc]" value="<%= @post.desc%>"/>
    
    <div class='car_type'>
      <h2>Car Make: </h2><input type="text" name="post[car_make]" value="post[car_make]"/>
      <h2>Car Model: </h2><input type="text" name="post[car_model]" value="post[car_model]"/>
      <h2>Car Year: </h2><input type="integer" name="post[car_year]" value="post[car_year]"/>
    </div>

    <div class='locations'>
        <h2>Where is your car? </h2><input type="text" name="post[origin]" value="<%= @post.origin%>"/>
        <h2>Where does it need to be? </h2><input type="text" name="post[destination]" value="<%= @post.destination%>"/>
    </div>

    <h2>By when? </h2><input type="date" name="post[end_date]" value="<%= @post.end_date%>"/>

    <input type="submit" value="Edit" />
</form>
