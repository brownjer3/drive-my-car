<div class="wrapper">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1 class="text-center">POSTS INDEX PAGE</h1>
        </div>
        <div class="col-md-3">
            <a class="btn btn-primary float-end" href="/posts/new">Create Post</a>
        </div>
    </div>
    <% @posts.each do |post| %>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card w-100 <%="border-success" if post.user == current_user%>">
                <div class="card-body">
                    <h5 class="card-title"><%=post.title%></h5>
                    <br/>
                    <p class="card-text"><%=car_type(post)%>
                        <svg width="1em" height="0.5em" viewBox="0 0 16 16" class="bi bi-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="8" cy="8" r="8"/>
                        </svg>
                        <%=post.origin%>
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
                        </svg>
                        <%=post.destination%>
                        <svg width="1em" height="0.5em" viewBox="0 0 16 16" class="bi bi-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="8" cy="8" r="8"/>
                        </svg>
                        by <%=short_date(post.end_date)%>
                    </p>
                    <a href="/posts/<%=post.id%>" class="btn btn-outline-primary">View Details</a>
                </div>
                <div class="card-footer">
                    <small>posted by <a href="/users/<%=post.user.id%>"><%=owner_name(post)%></a> <%=time_since_post(post.created_at)%></small>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
    <br/>
    <% end %>

    <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
    </div>
    </div>