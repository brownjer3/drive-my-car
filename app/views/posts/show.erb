<div class="wrapper">
    <% if !owner? %>
        <div class='row'>
            <div class='col-md-8'></div>
            <div class="col-md-4">
                <a class="btn btn-outline-success float-end" href="mailto:<%=@post.user.email%>">Email <%=@post.user.name%></a>
                <br/><br/><br/>
            </div>
        </div>
    <% else %>
        <div class='row'>
            <div class='col-md-8'></div>
            <div class="col-md-2">
                <a class="btn btn-outline-success float-end" href="/posts/<%=@post.id%>/edit">Edit</a>
            </div>
            <div class="col-md-2">
                <form action="/posts/<%=@post.id%>/delete" method="POST" >
                    <input type="hidden" name="_method" value="DELETE" />
                    <input class="btn btn-outline-danger float-end" type="submit" value="Delete" />
                    <br/><br/><br/>
                </form>
            </div>
        </div>
    <% end %>

    <div class="card">
    <h5 class="card-header"><%=@post.title%></h5>
        <div class="card-body">
            <p class="card-text"><%=@post.desc%></p>
            <h6 class="card-title">Car: <%=car_type(@post)%></h6>
            <p class="card-text">
                <%=@post.origin%> 
                    <svg width="2em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
                    </svg>
                <%=@post.destination%> by <%=display_date(@post.end_date)%>
            </p>
        </div>
        <div class="card-footer text-muted text-center">
            <% if !owner? %>
                Posted by <strong><a style="text-decoration: none; color: inherit;" href="/users/<%=@post.user.id%>" ><%=@post.user.name%></a></strong> on <%=display_date(@post.created_at.to_date)%>
            <% else %>
                You posted this on <%=display_date(@post.created_at.to_date)%>
            <% end %>
        </div> 
    </div>


