<h1>POST SHOW PAGE</h1>

<h2><%=@post.title%></h2>

<p><%=@post.desc%></p>
<br/>
<% if false %>
#leaving this out until i figure out the date data stuff
<p>Needs to go from <%=@post.s_location%> to <%=@post.e_location%> by <%=@post.end_date.to_formatted_s(:long)%></p>
<% end %> 
<p>Needs to get there by <%=display_date(@post.end_date)%></p>

<!-- Post Owner access only -->

<% if owner? %>
    <a href="/posts/<%=@post.id%>/edit">Edit Post</a>
    <br/>
    <form action="/posts/<%=@post.id%>/delete" method="POST" >
        <input type="hidden" name="_method" value="DELETE" />
        <input type="submit" value="Delete Post" />
    </form>
<% end %>