<h1> USER EDIT PAGE </h1>

<form action="/users/<%=@user.id%>" method="POST" >
    <input type="hidden" name="_method" value="PATCH" />

    <h3>Name: </h3><input type="text" name="user[name]" value="<%=@user.name%>"/>
    <h3>Email: </h3><input type="email" name="user[email]" value="<%=@user.email%>"/> 
    <h3>Password: </h3><input type="password" name="user[password]" /> 
    <br />
    <br />
    <input type="submit" value="Update" > 

</form>